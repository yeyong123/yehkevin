<%= form_for(@about, html: {multipart: true}) do |f| %>
  <% if @about.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@about.errors.count, "error") %> prohibited this about from being saved:</h2>

      <ul>
      <% @about.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
	</div>
  <div class="field">
		<%= f.label :content %><br />
		<%= javascript_include_tag "ckeditor/ckeditor.js" %>  
		<%= f.cktext_area :content %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>
	<div class="field">
			<%= f.label :sort_id %>
			<%= f.select :sort_id, Sort.all.map { |so| [so.name, so.id]} %>
		</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
