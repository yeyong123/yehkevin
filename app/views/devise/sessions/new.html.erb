<div class="sign-in">
<h2><%= t('.sign_in') %></h2>

<div class="sign-in-login">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="email-sign"><%= f.label t('.email') %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div class="password-sign"><%= f.label t('.password') %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember-sign"><%= f.check_box :remember_me %> <%= f.label t('.remember_me') %></div>
  <% end -%>

  <div class="submit-sign"><%= f.submit t('.sign_in'), class: "btn btn-primary" %></div>
<% end %>
</div>
<div class="sign-in-links">
	<%= render "devise/shared/links" %>
</div>
</div>
